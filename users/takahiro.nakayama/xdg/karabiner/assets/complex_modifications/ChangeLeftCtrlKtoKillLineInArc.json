{
    "description": "Ctrl+K to delete to end of line in Arc",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^company\\.thebrowser\\.Browser$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "k",
                "modifiers": {
                    "mandatory": [
                        "left_control"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_command",
                        "left_shift"
                    ]
                },
                {
                    "key_code": "delete_or_backspace"
                }
            ],
            "type": "basic"
        }
    ]
}
